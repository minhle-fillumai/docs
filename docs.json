{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "Filum AI Help Center",
    "colors": {
        "primary": "#16A34A",
        "light": "#07C983",
        "dark": "#15803D"
    },
    "favicon": "/filumfav.png",
    "navigation": {
        "tabs": [
            {
                "tab": "Hướng dẫn sử dụng",
                "groups": [
                    {
                        "group": "Bắt đầu với Filum AI",
                        "pages": [
                            "index",
                            "quickstart",
                            "development"
                        ]
                    },
                    {
                        "group": "Customization",
                        "pages": [
                            "essentials/settings",
                            "essentials/navigation"
                        ]
                    },
                    {
                        "group": "Writing content",
                        "pages": [
                            "essentials/markdown",
                            "essentials/code",
                            "essentials/images",
                            "essentials/reusable-snippets"
                        ]
                    },
                    {
                        "group": "AI tools",
                        "pages": [
                            "ai-tools/cursor",
                            "ai-tools/claude-code",
                            "ai-tools/windsurf"
                        ]
                    }
                ]
            },
            {
                "tab": "Tài liệu API",
                "groups": [
                    {
                        "group": "API documentation",
                        "pages": [
                            "api-reference/introduction"
                        ]
                    },
                    {
                        "group": "Endpoint examples",
                        "pages": [
                            "api-reference/endpoint/get",
                            "api-reference/endpoint/create",
                            "api-reference/endpoint/delete",
                            "api-reference/endpoint/webhook"
                        ]
                    }
                ]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "Documentation",
                    "href": "https://mintlify.com/docs",
                    "icon": "book-open-cover"
                },
                {
                    "anchor": "Câu chuyện thành công",
                    "href": "https://www.filum.ai/customers",
                    "icon": "rocket"
                },
                {
                    "anchor": "Blog",
                    "href": "https://blog.filum.ai/",
                    "icon": "newspaper"
                }
            ]
        }
    },
    "logo": {
        "light": "/logo/lightlogo.png",
        "dark": "/logo/darklogo.png"
    },
    "fonts": {
        "family": "Inter",
        "weight": 400,
        "source": "ttps://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap",
        "format": "woff2",
        "heading": {
            "family": "Inter",
            "weight": 700
        },
      "code": {
            "family": "JetBrains Mono",
            "weight": 500
        },
        "body": {
            "family": "Inter",
            "weight": 600
        }
    },
    "navbar": {
        "links": [
            {
                "label": "Đăng ký",
                "href": "https://www.filum.ai/book-demo"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Đăng nhập Filum AI",
            "href": "https://cx.filum.ai"
        }
    },
    "footer": {
        "socials": {
            "facebook": "https://www.facebook.com/filumai/",
            "youtube": "https://www.youtube.com/@filumai",
            "linkedin": "https://www.linkedin.com/company/filum-ai/"
        }
    }
}